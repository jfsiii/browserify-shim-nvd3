{
  "name": "browserify-shim-nvd3",
  "version": "0.0.0",
  "description": "An isolated example of issues using browserify-shim with nvd3",
  "main": "src/index.js",
  "scripts": {
  	"test": "npm run build && open index.html",
    "build": "browserify -r d3 -r nvd3 -r jquery src/index.js > build/common.js; browserify -x d3 -x nvd3 -x jquery src/page/a.js > build/page/a.js",
    "postinstall": "bower install nvd3 jquery"
  },
  "author": "JFSIII <JFSIII@JFSIII.org>",
  "license": "MIT",
  "dependencies": {
    "browserify-shim": "^3.4.1",
    "bower": "^1.3.2",
    "browserify": "^3.41.0"
  },
  "browserify": {
      "transform": [
        "browserify-shim"
      ]
    },
    "browser": {
      "jquery": "./bower_components/jquery/dist/jquery.js",
      "d3": "./bower_components/d3/d3.js",
      "nvd3": "./bower_components/nvd3/nv.d3.js"
    },
    "browserify-shim": {
      "jquery": "jQuery",
      "d3": "d3",
      "nvd3": {
        "depends": [
          "d3"
        ],
        "exports": "nv"
      }
    }
}
